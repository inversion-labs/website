<script>
  const ball = document.querySelector(".ball") as HTMLElement;

  function moveBallSmoothly(targetX: number, targetY: number) {
    let currentX = parseInt(ball.style.left || "0", 10);
    let currentY = parseInt(ball.style.top || "0", 10);

    const speed = 0.075;

    function animate() {
      const dx = (targetX - currentX) * speed;
      const dy = (targetY - currentY) * speed;

      currentX += dx;
      currentY += dy;

      ball.style.left = currentX + "px";
      ball.style.top = currentY + "px";

      if (Math.abs(dx) > 0.1 || Math.abs(dy) > 0.1) {
        requestAnimationFrame(animate);
      }
    }

    animate();
  }

  document.addEventListener("mousemove", (e) => {
    const targetX = e.clientX;
    const targetY = e.clientY;
    moveBallSmoothly(targetX, targetY);
  });
</script>

<div class="ball"></div>

<style>
  .ball {
    background-color: #ffffff;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    pointer-events: none;
    position: absolute;
    top: 0;
    left: 0;
    transform: translate(-50%, -50%);

    mix-blend-mode: difference;
  }
</style>
